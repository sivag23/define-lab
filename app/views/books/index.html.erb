<p id="notice"><%= notice %></p>

<h1>Books</h1>

<div> <button class="pull-right btn btn-success"><%= link_to 'New Book', new_book_path %></button></div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Book ID</th>
      <th scope="col">Book Title</th>
      <th scope="col">View</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>

      <td><%= book.id %></td>
        <td><%= book.book_title%></td>
        <td><button class="btn btn-info"><%= link_to 'Show', book %></button></td>
        <td><button class="btn btn-warning"><%= link_to 'Edit', edit_book_path(book) %></button>
        <button class="btn btn-danger"> <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

